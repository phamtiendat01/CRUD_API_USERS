    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": false,       // ğŸ‘ˆ (tÃ¹y chá»n) trÃ¡nh fail build vÃ¬ biáº¿n thá»«a
